{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "h",
                "hpp",
                "inl",
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["css", "md", "h", "cpp", "json"],
    "prettier.tabWidth": 4
}
